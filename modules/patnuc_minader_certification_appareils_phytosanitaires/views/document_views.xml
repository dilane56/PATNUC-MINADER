<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire des documents -->
        <record id="view_document_form" model="ir.ui.view">
            <field name="name">phytosanitary.document.form</field>
            <field name="model">phytosanitary.document</field>
            <field name="arch" type="xml">
                <form string="Document Phytosanitaire">
                    <sheet>
                        <group>
                            <group>
                                <field name="request_id" readonly="1"/>
                                <field name="document_type"/>
                                <field name="name"/>
                                <field name="is_required" readonly="1"/>
                            </group>
                            <group>
                                <field name="file_data" filename="file_name"/>
                                <field name="file_name" invisible="1"/>
                                <field name="is_provided" readonly="1"/>
                                <field name="is_valid"/>
                            </group>
                        </group>
                        <group string="Validation">
                            <group>
                                <field name="uploaded_by" readonly="1"/>
                                <field name="upload_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="validated_by" readonly="1"/>
                                <field name="validation_date" readonly="1"/>
                            </group>
                        </group>
                        <group string="Commentaires">
                            <field name="validation_comments" placeholder="Commentaires de validation..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue liste des documents -->
        <record id="view_document_tree" model="ir.ui.view">
            <field name="name">phytosanitary.document.tree</field>
            <field name="model">phytosanitary.document</field>
            <field name="arch" type="xml">
                <tree string="Documents">
                    <field name="request_id"/>
                    <field name="document_type"/>
                    <field name="name"/>
                    <field name="is_required"/>
                    <field name="is_provided" decoration-success="is_provided == True"/>
                    <field name="is_valid" decoration-success="is_valid == True"/>
                    <field name="upload_date"/>
                    <field name="uploaded_by"/>
                </tree>
            </field>
        </record>

        <!-- Action pour les documents -->
        <record id="action_document" model="ir.actions.act_window">
            <field name="name">Documents</field>
            <field name="res_model">phytosanitary.document</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Enregistrez vos informations ici !
                </p>
            </field>
        </record>
    </data>
</odoo>