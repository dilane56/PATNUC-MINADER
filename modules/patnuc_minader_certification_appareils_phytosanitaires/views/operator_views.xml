<odoo>
    <!-- FORM VIEW -->
    <record id="view_form_certification_operator" model="ir.ui.view">
        <field name="name">phytosanitary.certification.operator.form</field>
        <field name="model">phytosanitary.certification.operator</field>
        <field name="arch" type="xml">
            <form string="Opérateur Semencier">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,approved,suspended,cancelled"/>
                </header>

                <sheet>
                    <!-- TITRE / REFERENCE -->
                    <div class="oe_title">
                        <h1><field name="partner_name" readonly="1"/></h1>
                        <label for="name"/>
                        <field name="name" readonly="1"/>
                    </div>

                    <!-- INFORMATIONS GÉNÉRALES -->
                    <group col="4" string="Informations générales">
                        <group colspan="2">
                            <field name="user_id"/>
                            <field name="operator_type"/>
                            <field name="actif" widget="boolean_toggle"/>
                        </group>
                        <group colspan="2">
                            <field name="professional_card"/>
                            <field name="technical_approval"/>
                            <field name="cni_number"/>
                        </group>
                    </group>

                    <!-- STATUT AGRÉMENT CESP -->
                    <group col="4" string="Statut d'agrément">
                        <group colspan="2">
                            <field name="is_agreed_cesp" readonly="1" widget="boolean_toggle"/>
                        </group>
                        <group colspan="2">
                            <field name="has_valid_agreement" readonly="1"/>
                            <button name="action_view_agreements" type="object" class="oe_link"
                                    string="Voir les agréments"
                                    invisible="not agreement_ids"/>
                        </group>
                    </group>

                    <!-- COORDONNÉES / ADRESSE -->
                    <separator string="Coordonnées du partenaire"/>
                    <group col="4">
                        <group>
                            <field name="partner_phone"/>
                            <field name="partner_email"/>
                        </group>
                        <group>
                            <field name="partner_id" readonly="1"/>
                        </group>
                    </group>

                    <!-- ONGLET DÉTAILLÉS -->
                    <notebook>
                        <!-- ONGLET AGRÉMENTS -->
                        <page string="Agréments">
                            <field name="agreement_ids" readonly="1">
                                <tree decoration-success="is_valid==True"
                                      decoration-danger="is_valid==False">
                                    <field name="name"/>
                                    <field name="issue_date"/>
                                    <field name="expiry_date"/>
                                    <field name="is_valid"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>

                        <!-- ONGLET CERTIFICATIONS -->
                        <page string="Demandes de Certification">
                            <field name="certification_requests" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="state"/>
                                    <field name="create_date"/>
                                </tree>
                            </field>
                        </page>

                        <!-- NOTES INTERNES -->
                        <page string="Informations supplémentaires">
                            <field name="message_ids" widget="mail_thread" options="{'no_create': True}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_tree_certification_operator" model="ir.ui.view">
        <field name="name">phytosanitary.certification.operator.tree</field>
        <field name="model">phytosanitary.certification.operator</field>
        <field name="arch" type="xml">
            <tree string="Opérateurs">
                <field name="name"/>
                <field name="partner_name"/>
                <field name="user_id"/>
                <field name="operator_type"/>
                 <field name="actif"/>
                <field name="state"/>
                <field name="is_agreed_cesp"/>
                <field name="certification_count"/>
            </tree>
        </field>
    </record>

    <!-- ACTION / MENU -->
    <record id="action_certification_operator" model="ir.actions.act_window">
        <field name="name">Opérateurs </field>
        <field name="res_model">phytosanitary.certification.operator</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
