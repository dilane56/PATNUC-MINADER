<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="category_certification" model="ir.module.category">
        <field name="name">Certification Semences</field>
        <field name="description">Gestion des certifications de semences</field>
    </record>
    
    <record id="group_certification_user" model="res.groups">
        <field name="name">Utilisateur Certification</field>
        <field name="category_id" ref="category_certification"/>
    </record>
    
    <record id="group_certification_officer" model="res.groups">
        <field name="name">Agent Certification</field>
        <field name="category_id" ref="category_certification"/>
        <field name="implied_ids" eval="[(4, ref('group_certification_user'))]"/>
    </record>
    
    <record id="group_certification_manager" model="res.groups">
        <field name="name">Responsable Certification</field>
        <field name="category_id" ref="category_certification"/>
        <field name="implied_ids" eval="[(4, ref('group_certification_officer'))]"/>
    </record>
    
    <record id="group_certification_admin" model="res.groups">
        <field name="name">Administrateur Certification</field>
        <field name="category_id" ref="category_certification"/>
        <field name="implied_ids" eval="[(4, ref('group_certification_manager'))]"/>
    </record>
</odoo>