<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vue formulaire pour les agréments -->
        <record id="view_certification_agreement_form" model="ir.ui.view">
            <field name="name">certification.agreement.form</field>
            <field name="model">certification.agreement</field>
            <field name="arch" type="xml">
                <form string="Agrément Opérateur Semencier">
                    <header>
                        <!-- Bouton pour confirmer l'agrément -->
                        <button name="action_confirm_agreement" type="object" string="Confirmer l'agrément" 
                                class="btn-primary" invisible="state != 'inactive'"/>
                        
                        <!-- Barre de statut -->
                        <field name="state" widget="statusbar" 
                               statusbar_visible="inactive,active,expired"/>
                    </header>
                    
                    <sheet>
                        <!-- Titre avec référence -->
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <!-- Informations principales -->
                        <group>
                            <group string="Informations de l'agrément">
                                <field name="ceas_number" required="1" readonly="state == 'active'"/>
                                <field name="issue_date" required="1" readonly="state == 'active'"/>
                                <field name="expiry_date" required="1" readonly="state == 'active'"/>
                                <field name="is_valid" readonly="1"/>
                                <field name="days_to_expiry" readonly="1" 
                                       invisible="days_to_expiry &lt; 0"/>
                            </group>
                            
                            <group string="Fichier d'agrément">
                                <label string="Document d'agrément" for="agreement_file"/>
                                <div class="o_row">
                                    <!-- Fichier modifiable si inactif -->
                                    <field name="agreement_file" filename="agreement_filename" required="1" nolabel="1" 
                                           readonly="state == 'active'" invisible="state == 'active'"/>
                                    <!-- Nom du fichier visible si actif -->
                                    <span invisible="state != 'active'">
                                        <field name="agreement_filename" readonly="1" nolabel="1"/>
                                    </span>
                                    <field name="agreement_filename" invisible="1"/>
                                    
                                    <!-- Boutons selon le statut -->
                                    <button name="action_preview_agreement_file" type="object" string="Prévisualiser" 
                                            class="btn-secondary" invisible="not agreement_file"/>
                                    
                                </div>
                            </group>
                            
                            <group string="Opérateur bénéficiaire">
                                <field name="operator_id" required="1" readonly="state == 'active'"
                                       options="{'no_create': True, 'no_edit': True}"/>
                            </group>
                        </group>
                        
                        <!-- Remarques -->
                        <group string="Remarques">
                            <field name="notes" readonly="state == 'active'"/>
                        </group>
                        
                        <!-- Informations de suivi -->
                        <group string="Informations de suivi" invisible="not create_date">
                            <field name="create_date" readonly="1"/>
                            <field name="create_uid" readonly="1"/>
                        </group>
                    </sheet>
                    
                    <!-- Chatter pour le suivi des messages -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Vue liste pour les agréments -->
        <record id="view_certification_agreement_tree" model="ir.ui.view">
            <field name="name">certification.agreement.tree</field>
            <field name="model">certification.agreement</field>
            <field name="arch" type="xml">
                <tree string="Agréments Opérateurs" decoration-success="state=='active'" 
                      decoration-danger="state=='expired'" decoration-warning="state=='inactive'">
                    <field name="name"/>
                    <field name="ceas_number"/>
                    <field name="operator_id"/>
                    <field name="issue_date"/>
                    <field name="expiry_date"/>
                    <field name="days_to_expiry"/>
                    <field name="is_valid"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <!-- Vue recherche pour les agréments -->
        <record id="view_certification_agreement_search" model="ir.ui.view">
            <field name="name">certification.agreement.search</field>
            <field name="model">certification.agreement</field>
            <field name="arch" type="xml">
                <search string="Rechercher Agréments">
                    <field name="name"/>
                    <field name="ceas_number"/>
                    <field name="operator_id"/>
                    
                    <!-- Filtres prédéfinis -->
                    <separator/>
                    <filter name="inactive" string="Inactifs" domain="[('state', '=', 'inactive')]"/>
                    <filter name="active" string="Actifs" domain="[('state', '=', 'active')]"/>
                    <filter name="valid" string="Valides" domain="[('is_valid', '=', True)]"/>
                    <filter name="expiring_soon" string="Expirant bientôt" 
                            domain="[('days_to_expiry', '&lt;=', 30), ('days_to_expiry', '&gt;=', 0)]"/>
                    <filter name="expired" string="Expirés" domain="[('state', '=', 'expired')]"/>
                    
                    <!-- Groupements -->
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter name="group_operator" string="Opérateur" context="{'group_by': 'operator_id'}"/>
                        <filter name="group_state" string="Statut" context="{'group_by': 'state'}"/>
                        <filter name="group_issue_date" string="Date de délivrance" context="{'group_by': 'issue_date'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Action pour le menu des agréments -->
        <record id="action_certification_agreement" model="ir.actions.act_window">
            <field name="name">Agréments Opérateurs</field>
            <field name="res_model">certification.agreement</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer un nouvel agrément d'opérateur semencier
                </p>
                <p>
                    Les agréments sont obligatoires pour que les opérateurs puissent 
                    faire des demandes de certification de semences.
                </p>
            </field>
        </record>
        
    </data>
</odoo>