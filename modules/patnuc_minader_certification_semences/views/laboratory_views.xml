<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_certification_laboratory" model="ir.ui.view">
        <field name="name">certification.laboratory.form</field>
        <field name="model">certification.laboratory</field>
        <field name="arch" type="xml">
            <form string="Laboratoire">
                <sheet>
                    <group col="4" string="Informations générales">
                        <group colspan="2">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="address"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group colspan="2">
                            <field name="responsible_id"/>
                            <field name="accreditation"/>
                            <field name="test_capabilities"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_certification_laboratory" model="ir.ui.view">
        <field name="name">certification.laboratory.tree</field>
        <field name="model">certification.laboratory</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_certification_laboratory" model="ir.actions.act_window">
        <field name="name">Laboratoires</field>
        <field name="res_model">certification.laboratory</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Enregistrez vos informations ici !
            </p>
        </field>
    </record>

</odoo>
