<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data >
        
        <!-- Vue formulaire -->
        <record id="view_infrastructure_technical_support_form" model="ir.ui.view">
            <field name="name">infrastructure.technical.support.form</field>
            <field name="model">infrastructure.technical.support</field>
            <field name="arch" type="xml">
                <form string="Appui Technique">
                    <sheet>
                        <group>
                            <field name="request_id" readonly="1"/>
                            <field name="start_date"/> 
                        </group>
                        <notebook>
                            <page string="Documents Techniques">
                                <group string="Documents requis" col="2">
                                    <group >
                                        <field name="technical_plan_file" filename="technical_plan_filename"/>
                                        <field name="technical_plan_filename" invisible="1"/>
                                        
                                        <field name="cost_estimate_file" filename="cost_estimate_filename"/>
                                        <field name="cost_estimate_filename" invisible="1"/>
                                    </group>

                                    <group >
                                        <field name="feasibility_report_file" filename="feasibility_report_filename"/>
                                        <field name="feasibility_report_filename" invisible="1"/>
                                        
                                        <field name="technical_transmission_note_file" filename="technical_transmission_note_filename"/>
                                        <field name="technical_transmission_note_filename" invisible="1"/>
                                    </group>

                                </group>
                                
                                <group string="Évaluation Technique">
                                    <field name="technical_evaluation" widget="radio"/>
                                    <field name="avis_technique" placeholder="Saisissez ici votre avis technique détaillé..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        
        <!-- Vue liste Affiche plusieurs enregistrements sous forme de tableau.-->
        <record id="view_infrastructure_technical_support_tree" model="ir.ui.view">
            <field name="name">infrastructure.technical.support.tree</field>
            <field name="model">infrastructure.technical.support</field>
            <field name="arch" type="xml">
                <tree string="Appui Technique">
                    <field name="request_id"/>
                    <field name="start_date"/>
                </tree>
            </field>
        </record>




        <!-- Action pour ouvrir la vue-->
        <record id="action_infrastructure_technical_support" model="ir.actions.act_window">
            <field name="name">Appuis Techniques</field>
            <field name="res_model">infrastructure.technical.support</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html"><p>Gérez ici les dossiers d'appui technique pour les demandes de financement.</p></field>
        </record>

    </data>
</odoo>
