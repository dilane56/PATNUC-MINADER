<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_laboratory_analysis_form" model="ir.ui.view">
        <field name="name">laboratory.analysis.form</field>
        <field name="model">laboratory.analysis</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="4" string="Informations générales">
                        <group colspan="2">
                            <field name="name"/>
                            <field name="homologation_id" options="{'no_create': True}" readonly="1"/>
                            <field name="product_id" options="{'no_create': True}"/>
                        </group>
                        <group colspan="2">
                            <field name="analysis_date" readonly="1"/>
                            <field name="responsible_id" readonly="1"/>
                            <field name="laboratory_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Caractéristiques Physicochimiques">
                            <group col="4">
                                <group colspan="2" string="Aspect et Granulation">
                                    <field name="aspect"/>
                                    <field name="couleur"/>
                                    <field name="odeur"/>
                                    <separator string="Granulé par"/>
                                    <field name="granule_broyage"/>
                                    <field name="granule_compactage"/>
                                    <field name="granule_agregation"/>
                                    <field name="granule_cristalisation"/>
                                    <field name="granule_autres"/>
                                </group>
                                <group colspan="2" string="Propriétés Physiques">
                                    <field name="masse_volumique"/>
                                    <field name="densite_relative"/>
                                    <field name="temperature_cristalisation"/>
                                    <field name="temperature_fusion"/>
                                    <field name="temperature_ebullition"/>
                                    <field name="solubilite_eau_20c"/>
                                    <field name="ph"/>
                                    <field name="taux_humidite"/>
                                </group>
                            </group>
                            <group col="4">
                                <group colspan="2" string="Composition">
                                    <field name="matiere_minerale_brut"/>
                                    <field name="matiere_organique"/>
                                    <field name="compatible_pesticides"/>
                                </group>
                                <group colspan="2" string="Stabilité">
                                    <field name="stabilite_entrepot"/>
                                    <field name="pouvoir_corrosif"/>
                                    <field name="tension_vapeur"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Composition de l'Engrais">
                            <group col="4">
                                <group colspan="2">
                                    <field name="teneur_co"/>
                                    <field name="teneur_azote_n"/>
                                </group>
                                <group colspan="2">
                                    <field name="teneur_p2o5"/>
                                    <field name="inerte_ingredient"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Teneur en Métaux Lourds (ppm)">
                            <group col="4">
                                <group colspan="2">
                                    <field name="arsenic_total"/>
                                    <field name="cadmium_total"/>
                                    <field name="chrome_total"/>
                                    <field name="mercure_total"/>
                                </group>
                                <group colspan="2">
                                    <field name="nickel_total"/>
                                    <field name="plomb"/>
                                    <field name="selenium_total"/>
                                    <field name="autres_metaux_lourds"/>
                                </group>
                            </group>
                        </page>
                        <page string="Documents">
                            <group>
                                <field name="chemical_analysis_report" filename="chemical_analysis_report_filename"/>
                                <field name="chemical_analysis_report_filename" placeholder="Nom du fichier" invisible="1"/>
                                <field name="microbiological_analysis_report" filename="microbiological_analysis_report_filename"/>
                                <field name="microbiological_analysis_report_filename" placeholder="Nom du fichier" invisible="1"/>
                            </group>
                        </page>
                        
                    </notebook>
                </sheet>
                <footer>
                    <button string="Enregistrer et fermer" class="oe_highlight" special="save"/>
                    <button string="Ignorer" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_laboratory_analysis_tree" model="ir.ui.view">
        <field name="name">laboratory.analysis.tree</field>
        <field name="model">laboratory.analysis</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="homologation_id"/>
                <field name="product_id"/>
                <field name="analysis_date"/>
                <field name="state"/>
<!--                <field name="conform_to_specs"/>-->
            </tree>
        </field>
    </record>

    <record id="action_laboratory_analysis" model="ir.actions.act_window">
        <field name="name">Analyses de Laboratoire</field>
        <field name="res_model">laboratory.analysis</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>